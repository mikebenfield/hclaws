library
  exposed-modules:     Math.ConservationLaws, Math.Integration,
                       Math.Curves,
                       Math.Fan
                       Math.LinearAlgebra, 
                       Math.ConservationLaws.Examples.Burgers
                       Math.ConservationLaws.Examples.ShallowWater
                       Math.ConservationLaws.Examples.TwoComponentChromatography
                       Math.ConservationLaws.Examples.JenssenYoung2004_31
