  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8,
                       vector >=0.11,
                       matrix
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O2

executable claws-test
  build-depends:       base >=4.7 && <4.8,
                       tasty >=0.10,
                       tasty-hunit >=0.9,
                       tasty-quickcheck >=0.8,
                       tasty-smallcheck >=0.8,
                       tasty-th,
                       matrix,
                       vector,
                       claws
  main-is:             Main.hs
  hs-source-dirs:      test
  default-language:    Haskell2010

executable claws-bench
  build-depends:       base >=4.7 && <4.8,
                       criterion,
                       vector,
                       claws
  main-is:             Main.hs
  hs-source-dirs:      bench
  default-language:    Haskell2010


